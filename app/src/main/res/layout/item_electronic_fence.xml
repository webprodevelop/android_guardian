<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/ID_TXTVIEW_FENCE_NAME"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dim_gap_2"
		android:textSize="@dimen/dim_font_23"
		android:textColor="@android:color/black"
		android:text="@string/str_electronic_fence_name"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dim_gap_2"
		android:layout_marginBottom="@dimen/dim_gap_2"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/ID_TXTVIEW_FENCE_ADDRESS"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginRight="@dimen/dim_gap_2"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/darker_gray"
			android:text=""/>
		<TextView
			android:id="@+id/ID_BTN_UPDATE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:layout_marginRight="@dimen/dim_gap_2"
			android:background="@drawable/selector_small_orange_button_fill"
			android:paddingLeft="@dimen/dim_gap_2"
			android:paddingRight="@dimen/dim_gap_2"
			android:paddingTop="@dimen/dim_gap_1"
			android:paddingBottom="@dimen/dim_gap_1"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/white"
			android:text="@string/str_update"/>
		<TextView
			android:id="@+id/ID_BTN_DELETE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:background="@drawable/selector_small_red_button_fill"
			android:paddingLeft="@dimen/dim_gap_2"
			android:paddingRight="@dimen/dim_gap_2"
			android:paddingTop="@dimen/dim_gap_1"
			android:paddingBottom="@dimen/dim_gap_1"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/white"
			android:text="@string/str_delete"/>
	</LinearLayout>

</LinearLayout>