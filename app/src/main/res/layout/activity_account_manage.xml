<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/ID_ROOT_VIEW">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:orientation="vertical"
		tools:context="com.iot.shoumengou.activity.ActivityAccountManage">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/title_bar_height"
			android:background="@color/color_tab_selected">

			<ImageView
				android:id="@+id/ID_IMGVIEW_BACK"
				android:layout_width="@dimen/dim_icon_size"
				android:layout_height="@dimen/dim_icon_size"
				android:layout_centerVertical="true"
				android:src="@drawable/ic_back_img"
				tools:ignore="ContentDescription" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:textColor="@android:color/white"
				android:textSize="@dimen/dim_font_3"
				android:text="@string/str_account_manage"/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dim_gap_5">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/dim_gap_3"
				android:background="@drawable/edt_bg_selected"
				android:textColor="@android:color/black"
				android:textSize="@dimen/dim_font_3"
				android:text="@string/str_current_account"/>
			<TextView
				android:id="@+id/ID_TXTVIEW_CUR_ACCOUNT"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/dim_gap_9"
				android:layout_centerVertical="true"
				android:singleLine="true"
				android:gravity="right"
				android:padding="@dimen/dim_gap_3"
				android:textSize="@dimen/dim_font_2"
				android:textColor="@android:color/black"
				android:text="188888888888"/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dim_gap_5"
			android:layout_marginLeft="@dimen/dim_gap_5"
			android:layout_marginRight="@dimen/dim_gap_5">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/dim_gap_3"
				android:background="@drawable/edt_bg_selected"
				android:textColor="@android:color/black"
				android:textSize="@dimen/dim_font_3"
				android:text="@string/str_new_account"/>
			<EditText
				android:id="@+id/ID_EDTTEXT_NEW_ACCOUNT"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/dim_gap_9"
				android:background="@android:color/transparent"
				android:layout_centerVertical="true"
				android:maxLength="11"
				android:gravity="right"
				android:padding="@dimen/dim_gap_3"
				android:textSize="@dimen/dim_font_2"
				android:inputType="phone"
				android:hint="@string/str_input_new_phonenumber"/>
		</RelativeLayout>
		<Button
			android:id="@+id/ID_BUTTON_ACQUIRE"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/dim_verify_height"
			android:layout_gravity="right"
			android:layout_marginTop="@dimen/dim_gap_1"
			android:layout_marginEnd="@dimen/dim_gap_5"
			android:textAllCaps="false"
			android:paddingLeft="@dimen/dim_gap_2"
			android:paddingRight="@dimen/dim_gap_2"
			android:background="@drawable/selector_button_orange"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/white"
			android:text="@string/str_acquire_code"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dim_gap_5">
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/dim_gap_3"
				android:background="@drawable/edt_bg_selected"
				android:textColor="@android:color/black"
				android:textSize="@dimen/dim_font_3"
				android:text="@string/str_auth_code"/>
			<EditText
				android:id="@+id/ID_EDTTEXT_VERIFY_CODE"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/dim_gap_9"
				android:background="@android:color/transparent"
				android:layout_centerVertical="true"
				android:maxLength="4"
				android:gravity="right"
				android:padding="@dimen/dim_gap_3"
				android:textSize="@dimen/dim_font_2"
				android:inputType="number"
				android:hint="@string/str_input_verify_code"/>
		</RelativeLayout>
		<TextView
			android:id="@+id/ID_BTN_CONFIRM"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/dim_gap_6"
			android:background="@drawable/selector_small_button_fill"
			android:paddingTop="@dimen/dim_gap_2"
			android:paddingBottom="@dimen/dim_gap_2"
			android:paddingLeft="@dimen/dim_gap_6"
			android:paddingRight="@dimen/dim_gap_6"
			android:textSize="@dimen/dim_font_2"
			android:textColor="@android:color/white"
			android:text="@string/str_confirm"/>
	</LinearLayout>
</ScrollView>
