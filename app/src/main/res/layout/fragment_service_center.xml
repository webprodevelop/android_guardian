<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context=".fragment.FragmentServiceCenter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_tab_selected">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dim_font_3"
        android:text="@string/str_service_center"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_gap_3"
        android:layout_marginLeft="@dimen/dim_gap_4"
        android:layout_marginRight="@dimen/dim_gap_4"
        android:background="@drawable/box_top_border_radius"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dim_font_2"
        android:text="@string/str_muy_service"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dim_gap_2"
        android:layout_marginLeft="@dimen/dim_gap_4"
        android:layout_marginRight="@dimen/dim_gap_4">
        <ListView
            android:id="@+id/ID_LSTVIEW_MY_SERVICE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none"/>
        <LinearLayout
            android:id="@+id/ID_LL_NO_CONTENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_no_device_msg"
                android:textSize="@dimen/dim_font_3"/>

            <TextView
                android:id="@+id/ID_TEXT_CONFIRM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_gap_8"
                android:background="@drawable/selector_small_button_fill"
                android:paddingLeft="@dimen/dim_gap_6"
                android:paddingTop="@dimen/dim_gap_2"
                android:paddingRight="@dimen/dim_gap_6"
                android:paddingBottom="@dimen/dim_gap_2"
                android:text="@string/str_bind_device"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dim_font_2" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_gap_3"
        android:layout_marginLeft="@dimen/dim_gap_4"
        android:layout_marginRight="@dimen/dim_gap_4"
        android:background="@drawable/box_top_border_radius"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dim_font_2"
        android:text="@string/str_follow_up_service"/>

    <ListView
        android:id="@+id/ID_LSTVIEW_FOLLOW_UP_SERVICE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dim_gap_2"
        android:layout_marginLeft="@dimen/dim_gap_4"
        android:layout_marginRight="@dimen/dim_gap_4"
        android:layout_marginBottom="@dimen/dim_gap_1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none"/>

</LinearLayout>