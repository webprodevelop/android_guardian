<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:clickable="true"
	tools:context="com.iot.shoumengou.fragment.FragmentLocation">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_bar_height"
		android:background="@color/color_tab_selected">

		<ImageView
			android:id="@+id/ID_IMGVIEW_BACK"
			android:layout_width="@dimen/dim_icon_size"
			android:layout_height="@dimen/dim_icon_size"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:padding="@dimen/dim_gap_0"
			android:src="@drawable/ic_back_img"
			android:visibility="visible"
			tools:ignore="ContentDescription" />
		<TextView
			android:id="@+id/ID_TXTVIEW_TITLE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:textColor="@android:color/white"
			android:textSize="@dimen/dim_font_3"
			android:text="@string/str_location_information"/>

	</RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		<com.baidu.mapapi.map.MapView
			android:id="@+id/ID_VIEW_MAP"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true" />
		<LinearLayout
			android:id="@+id/ID_LYT_MENU"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shape_white_fill"
			android:layout_alignParentEnd="true"
			android:layout_margin="@dimen/dim_gap_4"
			android:paddingTop="@dimen/dim_gap_3"
			android:paddingBottom="@dimen/dim_gap_3"
			android:paddingLeft="@dimen/dim_gap_4"
			android:paddingRight="@dimen/dim_gap_4"
			android:elevation="@dimen/dim_gap_2"
			android:visibility="gone"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/ID_LYT_TRACK"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:layout_marginEnd="@dimen/dim_gap_5"
				android:orientation="vertical"
				tools:ignore="UseCompoundDrawables">
				<ImageView
					android:layout_width="@dimen/dim_icon_size"
					android:layout_height="@dimen/dim_icon_size"
					android:padding="@dimen/dim_gap_0"
					android:src="@drawable/location_track"
					tools:ignore="ContentDescription" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/button_text_color"
					android:textSize="@dimen/dim_font_2"
					android:text="@string/str_location_track"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ID_LYT_SETTINGS"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="vertical">
				<ImageView
					android:layout_width="@dimen/dim_icon_size"
					android:layout_height="@dimen/dim_icon_size"
					android:padding="@dimen/dim_gap_0"
					android:src="@drawable/location_settings"
					tools:ignore="ContentDescription" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/button_text_color"
					android:textSize="@dimen/dim_font_2"
					android:text="@string/str_setup"/>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/ID_LYT_NAVIGATION"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/color_bg_odd"
		android:visibility="gone"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="@dimen/dim_gap_3"
			android:orientation="vertical">
			<TextView
				android:id="@+id/ID_TXTVIEW_SOURCE"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/dim_gap_2"
				android:textColor="@android:color/black"
				android:textSize="@dimen/dim_font_3"
				android:text=""/>
			<TextView
				android:id="@+id/ID_TXTVIEW_ADDRESS"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/color_text_gray"
				android:textSize="@dimen/dim_font_2"
				android:text=""/>
		</LinearLayout>
		<ImageView
			android:id="@+id/ID_IMGVIEW_NAVIGATION"
			android:layout_width="@dimen/dim_big_icon_size"
			android:layout_height="@dimen/dim_big_icon_size"
			android:padding="@dimen/dim_gap_2"
			android:layout_margin="@dimen/dim_gap_2"
			android:src="@drawable/ic_navigation"
			tools:ignore="ContentDescription" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ID_LYT_TRACK_CONTROL"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/color_bg_odd"
		android:gravity="center_vertical"
		android:visibility="gone"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/ID_IMGVIEW_TRACK_PLAY"
			android:layout_width="@dimen/dim_round_icon_size"
			android:layout_height="@dimen/dim_round_icon_size"
			android:padding="@dimen/dim_gap_1"
			android:layout_margin="@dimen/dim_gap_3"
			android:src="@drawable/img_play"
			tools:ignore="ContentDescription" />
		<SeekBar
			android:id="@+id/ID_SEEK_TRACK"
			android:splitTrack="false"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/dim_gap_3"
			android:layout_weight="1"
			android:progress="0"
			android:progressTint="@android:color/black"
			android:thumb="@drawable/switch_thumb" />
	</LinearLayout>
</LinearLayout>
